{%
set classes = [
'node',
'node-detail',
'node--type-' ~ node.bundle|clean_class,
node.isPromoted() ? 'node--promoted',
node.isSticky() ? 'node--sticky',
not node.isPublished() ? 'node--unpublished',
view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
'clearfix',
'content-box',
'post-block '
]
%}
{% if box == true %}
    <!--### ###-->
    <!--=== ===-->
    <!-- -->
    <!-- -->
    <!--=== ===-->
    <!--### ###-->

<!--*#*#*#*#*#*# Node Article Box *#*#*#*#*#*#-->
<article{{ attributes.addClass(classes) }}>

    <!--### Outer ###-->

    <!--=== Top Right===-->
    <div class="box_outer_top_right logo-then-name">
        {{ content.content_sub_category }}
    </div>
    <!--=== End Top Right===-->

    <!--=== Top Left===-->
    <div class="box_outer_top_left logo-then-name">
        {{ content.field_content_category }}
    </div>
    <!--=== End Top Left===-->

    <!--=== Top Bottom Left===-->
    <div class="box_outer_bottom_left"></div>
    <!--=== End Bottom Left==-->

    <!--### End Outer ###-->

<!--***********************************************************************************************************-->

    <!--### Header ###-->
    <!--=== Box Head ===-->
    <div class="post-image box-head">
        <!-- Box Head Image-->
        <div class="content-image box-head-image">
            {% if post_format == 'video' or post_format == 'audio' and gva_iframe %}
                {{ gva_iframe|raw }}
            {% elseif post_format == 'gallery' and content.field_post_gallery %}
                {{ content.field_post_gallery }}
            {% else %}
                {{ content.field_image }}
            {% endif %}
        </div>
    </div>
    <!--=== End Box Head===-->
    <!--### End Header ###-->

<!--***********************************************************************************************************-->

    <!--### Body ###-->
    <div class="box__body">
        <!--=== ===-->
        {% if content.field_tags['#items'] is not empty %}
            <div class="box__special article_box__special">
                <!--=== tags ===-->
                {{ content.field_tags }}
            </div>
        {% else %}
            <div class="box__punchline">
                {{ content.field_punchline }}
            </div>
        {% endif %}

        <!--=== ===-->
        <!--=== ===-->
        <div class="box__body_bottom">
            <div class="pull-left just-logo mini-space">{{ content.field_tax_embed_one }}</div>
            <div class="pull-left box__title"><a href="{{ url }}">{{ label }}</a></div>
        </div>
        <!--=== ===-->
    </div>
    <!--### End Body ###-->

<!--***********************************************************************************************************-->
    <!--### Footer ###-->
    <div class="card-foot countdown-card-foot box-footer">
        <!--=== ===-->
        <div class="category-list item-list countdown-card-readmore">
            <!-- -->
            <div class="item-list">
                <ul><li class="view-list-item card-read-more box-footer-link"><a href="{{ url }}" hreflang="en"><span class="text-theme box__read_more">Read More</span> | {{ date }}</a></li></ul>
            </div>
            <!-- -->
        </div>
        <!--=== ===-->
    </div>
    <!--### End Footer###-->
<!--***********************************************************************************************************-->

</article>
<!--*#*#*#*#*#*#  Node Article Box *#*#*#*#*#*#-->
{% endif %}