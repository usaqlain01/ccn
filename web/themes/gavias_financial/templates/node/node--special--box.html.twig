{%
set classes = [
'node',
'node-detail',
'node--type-' ~ node.bundle|clean_class,
node.isPromoted() ? 'node--promoted',
node.isSticky() ? 'node--sticky',
not node.isPublished() ? 'node--unpublished',
view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
'clearfix',
'content-box',
'post-block '
]
%}

{% if teaser == true %}
    <!-- Start Display article for teaser page -->
    <!-- End Display article for teaser page -->
{% elseif box == true %}
    {#<span>{{ field_names }}</span>#}
    <!-- Start Display article for box page -->

    <article{{ attributes.addClass(classes) }}>
        <!---- Top Right ----->
        <div class="card__icon_top_right">
            {{ content.field_tax_embed_one }}
        </div>
        {#<!---- Top Left ----->#}
        <div class="card__icon_top_left">
        {{ content.field_special_sub_category }}
        </div>
        {#<!---- Bottom Right ----->#}
        <div class="card__icon_bottom_right">
        {{ content.field_content_category }}
        </div>

        <!-- Header -->
        <div class="post-image box-head">
            {{ content.field_special_image }}
        </div>

        <!-- Box Body -->
        <div class="box-body">
            <div class="box-main">
                {{ content.field_block_one }}
            </div>
            <div class="box-title">
                <h3><a href="{{ url }}">{{ label }}</a></h3>
            </div>

        </div>
        <!---- Footer Content ----->
        <div class="card-foot countdown-card-foot box-footer">

            {# Footer Readmore and Date #}
            <div class="category-list item-list countdown-card-readmore">
                <div class="item-list">
                    <ul><li class="view-list-item card-read-more box-footer-link"><a href="{{ url }}" hreflang="en"><span class="text-theme">Read More</span> | {{ date }}</a></li></ul>
                </div>
            </div>

        </div>
    </article>

    <!-- End Display article for box page -->

{% else %}
    <!-- Start Display article for detail page -->

    <article{{ attributes.addClass(classes)|without('about') }}>
        <header>
            {{ title_prefix }}
            {% if not page %}
                <h2{{ title_attributes.addClass('node__title') }}>
                    <a href="{{ url }}" rel="bookmark">{{ label }}</a>
                </h2>
            {% endif %}
            {% set title_suffix = '' %}
            {{ title_suffix }}
            {% if display_submitted %}
                <div class="node__meta">
                    {{ author_picture }}
                    <span{{ author_attributes }}>
      {% trans %}Submitted by {{ author_name }} on {{ date }}{% endtrans %}
    </span>
                    {{ metadata }}
                </div>
            {% endif %}
        </header>
        <div{{ content_attributes.addClass('node__content', 'clearfix') }}>
            {{ content }}
        </div>
    </article>

    <!-- End Display article for detail page -->
{% endif %}