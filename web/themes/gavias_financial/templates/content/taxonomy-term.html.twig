<div{{ attributes }}>

    {% if not page %}
        {{ title_prefix }}
        <h2><a href="{{ url }}">{{ name }}</a></h2>
        {{ title_suffix }}
        {{ content }}
    {% else %}
        <div class ="termpage-content col-md-12 col-sm-12 col-xs-12" style="text-align: center;">
            {{ content }}
        </div>
        <div class ="termpage-name col-md-6 col-sm-6 col-xs-12" style="text-align: center;">
            <h2>{{ name }}</h2>
        </div>
        <div class ="termpage-title col-md-6 col-sm-6 col-xs-12" style="text-align: center; margin-bottom: 30px">
            <h2> - ALL CONTENT</h2>
        </div>
    {% endif %}
</div>
